<%=header %>
    <!-- 客户管理 -->
    <div class="customer">
        <div class="panel panel-info">
            <div class="panel-heading fz18">
                客户管理
                <button type="button" class="fr btn btn-danger add-customer">添加</button>
                <button type="button" class="fr btn btn-danger off-customer on">取消</button>
            </div>
            <div class="panel-body">
                <table class="table customer-table table-bordered">
                    <!-- 待请求的数据 -->
                </table>
                <form class="customer-form form-horizontal on">
                    <div class="form-group">
                        <label for="input-cus" class="col-sm-2 control-label">姓名：</label>
                        <div class="col-sm-8">
                            <input name="name" class="form-control" id="input-cus" placeholder="请输入客户姓名">
                            <input name="id" class="form-control" id="id" placeholder="id" style="display:none;">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="contact-cus" class="col-sm-2 control-label">联系方式：</label>
                        <div class="col-sm-8">
                            <input name="contact" class="form-control" id="contact-cus" placeholder="请输入客户联系方式">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-2 control-label">密码：</label>
                        <div class="col-sm-8">
                            <input name="pass" type="password" class="form-control" id="password" placeholder="请输入密码">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="bind_phone" class="col-sm-2 control-label">绑定手机：</label>
                        <div class="col-sm-8">
                            <input name="bind_phone" class="form-control" id="bind_phone" placeholder="请输入绑定的手机号码">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-8">
                            <div class="btn btn-default customer-btn-add">确定</div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
<%=footer %>